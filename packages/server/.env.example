# TTPolyglot 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# Nginx 配置
# ===========================================
NGINX_HTTP_PORT=
NGINX_HTTPS_PORT=

# ===========================================
# 服务器基础配置 (production/development)
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=info
ENVIRONMENT=production

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL=postgresql://ttpolyglot:password@localhost:5432/ttpolyglot
DB_NAME=ttpolyglot
DB_USER=ttpolyglot
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30
DB_TABLE_PREFIX=tt_

# ===========================================
# Redis 配置
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECTION_TIMEOUT=5
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# ===========================================
# 缓存 TTL 配置 (秒)
# ===========================================
CACHE_SESSION_TTL=86400
CACHE_API_RESPONSE_TTL=3600
CACHE_CONFIG_TTL=21600
CACHE_PERMISSION_TTL=7200
CACHE_TEMP_DATA_TTL=300

# ===========================================
# JWT 配置
# ===========================================
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_DAYS=7

# ===========================================
# 安全配置
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key-32-chars

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# 登录安全配置
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# ===========================================
# 请求限制配置
# ===========================================
MAX_REQUEST_SIZE=10MB
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MINUTES=15

# ===========================================
# 监控配置
# ===========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
METRICS_PORT=9090

# ===========================================
# 邮件配置 (可选)
# ===========================================
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_ADDRESS=
# SITE_URL=

# ===========================================
# 开发环境特定配置
# ===========================================
DEBUG=true
HOT_RELOAD=true
