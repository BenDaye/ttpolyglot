# TTPolyglot 开发环境配置示例
# 复制此文件为 .env.dev 并根据需要修改配置

# 数据库配置
DB_NAME=ttpolyglot
DB_USER=ttpolyglot
DB_PASSWORD=password
DATABASE_URL=postgresql://ttpolyglot:password@localhost:5432/ttpolyglot

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=dev-jwt-secret-change-in-production

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=debug
ENVIRONMENT=dev

# 开发环境特定配置
DEBUG=true
HOT_RELOAD=true
